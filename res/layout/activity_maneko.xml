<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".MainActivity" >

    <Button
        android:id="@+id/Button01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/GuestButton"
        android:layout_alignBottom="@+id/GuestButton"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="22dp"
        android:text="ボタン1" />

    <Button
        android:id="@+id/Button02"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/GuestButton"
        android:layout_alignBottom="@+id/GuestButton"
        android:layout_marginLeft="14dp"
        android:layout_toRightOf="@+id/GuestButton"
        android:text="ボタン2" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="Bluetooth" />

    <Button
        android:id="@+id/BluetoothButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/ServerButton"
        android:layout_below="@+id/textView1"
        android:layout_marginTop="35dp"
        android:text="接続" />

    <Button
        android:id="@+id/ServerButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/BluetoothButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="受付" />

    <Button
        android:id="@+id/GuestButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ServerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="19dp"
        android:text="呼び出し" />

</RelativeLayout>